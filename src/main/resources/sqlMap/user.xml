<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shao.argrculture.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.shao.argrculture.entity.User" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="password" property="type" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, password
  </sql>
  <select id="selectByName" resultType="java.lang.String" parameterType="java.lang.String">
    select 
    password
    from user
    where name = #{name,jdbcType=VARCHAR}
  </select>
</mapper>